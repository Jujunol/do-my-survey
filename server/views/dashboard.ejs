<% include partials/header.ejs %>
<link rel="stylesheet" href="/scripts/css/client-index.css" />
<div class="background-cover">
     <img src="/scripts/images/background.jpg" />
</div>

<% include partials/nav-light.ejs %>
<% include partials/sidebar.ejs %>

<div class="container-fluid col-sm-offset-1 col-sm-11" style="background: #FFF; border-top: 1px solid #e7e7e7; margin-top: 100px">
    <div class="row text-center" style="margin-top: 8px">
        <div class="panel panel-default col-sm-4 gridpanel">
            Active Surveys
            <div class="circle" style="border-color: #3FCE3F">
                <span><%= activeSurveyCount %></span>
            </div>
        </div>
        <div class="panel panel-default col-sm-4 gridpanel">
            Closed Surveys
            <div class="circle" style="border-color: #FF9999">
                <span><%= closedSurveyCount %></span>
            </div>
        </div>
        <div class="panel panel-default col-sm-4 gridpanel">
            Total Created Surveys
            <div class="circle" style="border-color: blue">
                <span><%= totalSurveyCount %></span>
            </div>
        </div>
    </div>
    <hr />
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">Your Surveys</div>
            <div class="panel-body">
                <ul class="list-group">
                    <% for(var i = 0; i < surveys.length; i++) { %>
                        <li class="list-group-item">
                            <span class="badge"><%= surveys[i].questions[0].responses.length %></span>
                            <a href="/survey/<%= surveys[i].surveyName %>"><%= surveys[i].surveyName %></a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">Recent Taken Surveys</div>
            <div class="panel-body">
                <ul class="list-group">
                    <% for(var i = 0; i < user.recentSurveys.length; i++) { %>
                        <li class="list-group-item">
                            <a href="/survey/<%= user.recentSurveys[i] %>"><%= user.recentSurveys[i] %></a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>
<center><div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div></center>

