    <!-- Sample content -->
    <div class="page-header">
        <h1>Do my Survey</h1>
        <% if(user) { %>
            <h3>Welcome <%= user.username %>!</h3>
        <% } %>
    </div>
<center><p><b>Welcome, Choose any survey you would like to answer, or delete!</b></p></center>
<div class="col-md-8 col-md-offset-2 jumbotron" style="border: 2px solid rgba(0, 0, 0, 0.35); margin-top: 20px;">
     <img src="/scripts/images/hand.jpg" alt="Your Surveys" style="float:left;width:862px;height:100px;">
    <table class="table table-striped table-hover" style="background: #FFF;">
        <tr>
            <th>Survey</th>
            <th>Author</th>
            <th>Created Date</th>
            <!--<th>Delete</th>-->
        </tr>
        <% for(var i = 0; i < surveys.length; i++) { %>
            <tr>
                <td><a href="/survey/<%= surveys[i].surveyName %>"><%= surveys[i].surveyName %></a></td>
                <td><%= surveys[i].creator %></td>
                <td><%= surveys[i].created.toDateString() %></td>
                <!--<td><a href="/survey/delete/<%= surveys._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">-->
                    <!--<button type="button" class="btn btn-danger">Delete</button>-->
                <!--</td>-->

            </tr>
        <% } %>
        </div>
    </table>

