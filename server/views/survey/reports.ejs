<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>
 <div class="background-cover">
     <img src="/scripts/images/b.jpg" />
 </div>
 
    
    <div class="page-header">
        <h1>View My Statistics</h1>
        <% if(user) { %>
            <h3>Welcome <%= user.username %>!</h3>
        <% } %>
    </div>
    
    <table class="table table-striped table-hover">
        <tr>
            <th>Questions</th>
            <th>Answers</th>
            <th>Created Date</th>
        </tr>
        <% for(var i = 0; i < surveys.length; i++) { %>
        <tr>
             <td><%= surveys[i].questions %></td>
             <!--<td><%= surveys[i].responses %></td>-->
             <td></td>
             <td><%= surveys[i].created.toDateString() %></td>

        </tr>
        <% } %>
   </table>
   
   <div class="container">
  <h2>User Statistics:</h2>
  <p>Your Impact Up to Date! :</p> 
  <div class="progress">
    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:40%">
      40% (Do-My-Survey Profile)
    </div>
  </div>
	  <div class="progress">
	        <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:50%">
	         50% (Surveys Created)
	  </div>
  </div>
	   <div class="progress">
	         <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:60%">
	          60% (Surveys Answered)
	    </div>
	  </div>
	  <div class="progress">
	    <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:35%">
	      35% (Surveys Deleted)
	    </div>
	  </div>
</div>
    
<% include ../partials/footer.ejs %>