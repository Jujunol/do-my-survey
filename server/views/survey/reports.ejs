<% include ../partials/header.ejs %>
<% include ../partials/navbar.ejs %>


 <div class="background-cover">
     <img src="/scripts/images/b.jpg" />
 </div>
   
    <div class="page-header">
        <h1>View My Surveys!</h1>
        <% if(user) { %>
            <h3>Welcome <%= user.username %>!</h3>
        <% } %>
    </div>
    
    <center><p><b>Hey <%= user.username %>,View, Edit, or Delete Your Answers</b></p></center>


<div class="col-md-6 col-md-offset-3 jumbotron" style="border: 2px solid rgba(0, 0, 0, 0.35); margin-top: 20px;">
      <div class="panel panel-default">
    
    <table class="table table-striped table-hover">
      <tr>
         <th>Survey Title</th>
            
         <th>Your Answers</th>
     </tr>
        <% for(var i = 0; i < surveys.length; i++) { %>
        <tr>
             <td><a href="/survey/<%= surveys[i].surveyName %>"><%= surveys[i].surveyName %></a></td>
             
             <td><%= surveys[i].created.toDateString() %></td>
             
             <td><a href="/survey/delete/<%= surveys._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');">
                    <button type="button" class="btn btn-danger">Delete</button>
             </td>
       </tr>
       <% } %>
       
 </table>
 </div> 
  <p>Your Impact Up to Date! :</p> 
  
  <div class="progress">
    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:40%">
      40% (Do-My-Survey Profile)
    </div>
  </div>
  
 <div class="progress">
    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:50%">
	  50% (Surveys Created)
	</div>
  </div>
  
<div class="progress">
	<div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:60%">
	 60% (Surveys Answered)
  </div>
 </div>
 
<div class="progress">
	<div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:35%">
	 35% (Surveys Deleted)
 </div>
</div>

<!-- /container -->    
<% include ../partials/footer.ejs %>